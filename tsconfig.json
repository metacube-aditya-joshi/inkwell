{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",           // Important
    "moduleResolution": "Node",   // Ensures compatibility with imports
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types","src/types"]
  },
  "include": ["src/**/*","src/types/**/*", "src/types"]
}
